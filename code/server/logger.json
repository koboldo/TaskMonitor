{
	"appenders": {
		"monitor": {
			"type": "file",
			"filename": "monitor.log",
            "format": "%r [%t] %p %c %x - %m%n"
		},
        "monitor-con": {
			"type": "console"
		}
	},
	"categories": {
        "default": {
                "appenders": ["monitor", "monitor-con"],
                "level": "debug"
            }
	}
}
